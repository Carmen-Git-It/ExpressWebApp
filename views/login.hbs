<div class="row">
  <div class="col-md-12">

    <h2>Log In</h2>

    <br />

    {{#if errorMessage}}
        <div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div> 
    {{/if}}

    <form method="post" action="/login">
    <div class="row">
        <div class="col-md-12">
        <div class="form-group">
            <label for="userName">User Name:</label>
            {{#if userName}}
                 <input class="form-control" id="userName" name="userName" type="text" value={{userName}} autofocus required/>
            {{else}}
                <input class="form-control" id="userName" name="userName" type="text" value="User Name" autofocus required/>
            {{/if}}
            <label for="password">Password:</label>
            <input class="form-control" id="password" name="password" type="text" value="Password" autofocus required/>
        </div>
        </div>
    </div>

      <hr />

      <input type="submit" class="btn btn-primary pull-right" value="Login" /><br /><br /><br />

    </form>
  </div>
</div>